extends ../base

block vars
	-let pageName = 'funds-page'
	-let pageTitle = 'Фонды'
	-let metaTitle = 'Фонды | Музей-заповедник Д.И. Менделеева и А.А. Блока'
	-let metaDescription = ''
block content
	main.main(class= pageName)
		section.section.page-top
			.container
				.content 
					+breadcrumps(pageTitle)
					.section-heading.section-heading--center
						h2.section-header= pageTitle
		section.section.offset-top
			.container 
				.groups
					ul.groups__list
						li.groups__item
							button.groups__btn.h5(data-button="knizhniy") Книжный
						li.groups__item
							button.groups__btn.h5(data-button="fotografii") Фотографии
						li.groups__item
							button.groups__btn.h5(data-button="dokumentalniy") Документальный
						li.groups__item
							button.groups__btn.h5(data-button="izobrazitelniy") Изобразительный
						li.groups__item
							button.groups__btn.h5(data-button="veshchevoy") Вещевой
				.groups__content#knizhniy
					include ../parts/fund
				.groups__content#fotografii
					include ../parts/fund
				.groups__content#dokumentalniy
					include ../parts/fund
				.groups__content#izobrazitelniy
					include ../parts/fund
				.groups__content#veshchevoy
					include ../parts/fund