extends ../base

block vars
	-let pageName = 'documents-page'
	-let pageTitle = 'Документы'
	-let metaTitle = 'Документы | Музей-заповедник Д.И. Менделеева и А.А. Блока'
	-let metaDescription = ''
block content
	main.main(class= pageName)
		section.section.page-top
			.container
				.content 
					+breadcrumps(pageTitle)
					.section-heading.section-heading--center
						h2.section-header= pageTitle
		section.section.offset-top
			.container 
				.content.documents
					ul.documents__list 
						-for(let i=0; i<6; i++)
							li.documents__item 
								h5.documents__name Копия устава музея
								.documents__info
									.documents__type.plague pdf
									button.documents__download.link.btn-link Посмотреть
							li.documents__item 
								h5.documents__name ПРАВИЛА ПРИЁМА ПОСЕТИТЕЛЕЙ И ПОРЯДОК ОБСЛУЖИВАНИЯ ПОСЕТИТЕЛЕЙ МУЗЕЯ-ЗАПОВЕДНИКА
								.documents__info
									.documents__type.plague pdf
									button.documents__download.link.btn-link Посмотреть