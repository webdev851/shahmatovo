extends ../base

block vars
	-let pageName = 'gallery-page'
	-let pageTitle = 'Галерея'
	-let metaTitle = 'Галерея | Музей-заповедник Д.И. Менделеева и А.А. Блока'
	-let metaDescription = ''
block content
	main.main(class= pageName)
		section.section.page-top
			.container
				.content 
					+breadcrumps(pageTitle)
					.section-heading.section-heading--center
						h2.section-header= pageTitle
		section.section.offset-top
			.container 
				.groups
					ul.groups__list
						li.groups__item
							button.groups__btn.h5(data-button="shahmatovo") Шахматово
						li.groups__item
							button.groups__btn.h5(data-button="boblovo") Боблово
						li.groups__item
							button.groups__btn.h5(data-button="tarakanovo") Тараканово
			.groups__content#shahmatovo
				include ../parts/gallery
			.groups__content#boblovo
				include ../parts/gallery
			.groups__content#tarakanovo
				include ../parts/gallery